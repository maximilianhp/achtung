<% content_for :bottombar do %>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="deviseform"><%= f.email_field :email, placeholder: "Email", :autofocus => true %></div>

    <div class="deviseform"><%= f.password_field :password, placeholder: "Password" %></div>

    <div class="deviseform"><%= f.submit "Sign in!" %></div>
  <% end %>

  <div class="deviselinks">
    <%= link_to "Sign up", new_registration_path(resource_name) %>
    <br>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </div>
<% end %>